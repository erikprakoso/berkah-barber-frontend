---
import TestimonialCarousel from "./TestimonialCarousel";
---

<section id="lookbook" class="py-20 bg-[#1a150d] overflow-hidden">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="animate-on-scroll fade-up mb-12 text-center">
            <h2
                class="text-3xl font-bold tracking-tight text-white sm:text-4xl"
            >
                Galeri & Testimoni
            </h2>
            <div class="mt-4 h-1 w-20 bg-primary mx-auto rounded-full"></div>
        </div>
        <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
            <!-- Testimonial Side -->
            <div class="animate-on-scroll fade-up flex flex-col justify-center">
                <TestimonialCarousel client:visible />
            </div>

            <!-- Lookbook Grid -->
            <div class="grid grid-cols-2 gap-4">
                <div class="space-y-4">
                    <div
                        class="animate-on-scroll fade-in delay-100 h-48 rounded-xl bg-gray-800 overflow-hidden shadow-lg"
                    >
                        <img
                            src="/model-rambut-pria-fade-cut-side-part.webp"
                            alt="Close up of a fade haircut"
                            class="h-full w-full object-cover object-center hover:scale-105 transition-transform duration-500"
                        />
                    </div>
                    <div
                        class="animate-on-scroll fade-in delay-200 h-64 rounded-xl bg-gray-800 overflow-hidden shadow-lg"
                    >
                        <img
                            src="/model-rambut-pria-pompadour-klasik.webp"
                            alt="Man with styled pompadour hair"
                            class="h-full w-full object-cover object-center hover:scale-105 transition-transform duration-500"
                        />
                    </div>
                </div>
                <div class="space-y-4 pt-8">
                    <div
                        class="animate-on-scroll fade-in delay-300 h-64 rounded-xl bg-gray-800 overflow-hidden shadow-lg"
                    >
                        <img
                            src="/suasana-potong-rambut-berkah-barber.webp"
                            alt="Man in barbershop chair looking in mirror"
                            class="h-full w-full object-cover object-center hover:scale-105 transition-transform duration-500"
                        />
                    </div>
                    <div
                        class="animate-on-scroll fade-in delay-300 h-48 rounded-xl bg-gray-800 overflow-hidden shadow-lg"
                    >
                        <img
                            src="/alat-cukur-barber-profesional.webp"
                            alt="Barber tools scissors and comb"
                            class="h-full w-full object-cover object-center hover:scale-105 transition-transform duration-500"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
